<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transaction_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".fragments.account.TransactionHistoryFragment">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/menu_jump"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/menu_detail"
                android:background="@color/bg_white_press"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_1_8dp">

                <com.vnapnic.myvib.customs.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/jump_to" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_1_8dp"
                    android:text="@string/abc_activity_chooser_view_see_all" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/row_bar1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/menu_jump"
                android:background="@drawable/item_date_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.vnapnic.myvib.customs.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="7 thg 7 2016"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/days_ago1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_bar1"
                android:padding="@dimen/spacing_1_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title_history1"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="601 CREDIT INT CAPITALISE"
                        android:textColor="@color/black" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/money_history1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:text="+11 VND"
                        android:textColor="@color/orange_text"
                        android:textSize="@dimen/text_2_12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/view_receipt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/spacing_0_4dp"
                    android:paddingRight="@dimen/spacing_0_4dp"
                    android:src="@drawable/icon_eye" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_bar2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/content_1"
                android:background="@drawable/item_date_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.vnapnic.myvib.customs.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="27 thg 4 2016"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/days_ago2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_bar2"
                android:padding="@dimen/spacing_1_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title_history2"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home, Bill"
                        android:textColor="@color/black" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/money_history2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:text="-1 VND"
                        android:textColor="@color/orange_text"
                        android:textSize="@dimen/text_2_12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/view_receipt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/spacing_0_4dp"
                    android:paddingRight="@dimen/spacing_0_4dp"
                    android:src="@drawable/icon_eye" />
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/content_2"
                android:background="@color/bg_white_press" />

            <RelativeLayout
                android:id="@+id/row_bar3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/content_2"
                android:background="@drawable/item_date_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.vnapnic.myvib.customs.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="30 thg 7 2016"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />

                <com.vnapnic.myvib.customs.FontTextView
                    android:id="@+id/days_ago3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_3_14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_bar3"
                android:padding="@dimen/spacing_1_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title_history3"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0913229393-Thanh toÃ¡n"
                        android:textColor="@color/black" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/money_history3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:text="35,811 VND"
                        android:textColor="@color/orange_text"
                        android:textSize="@dimen/text_2_12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/view_receipt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/spacing_0_4dp"
                    android:paddingRight="@dimen/spacing_0_4dp"
                    android:src="@drawable/icon_eye" />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/content_3"
                android:background="@color/bg_white_press" />

            <RelativeLayout
                android:id="@+id/content_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:padding="@dimen/spacing_1_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/title_history4"
                        style="@style/text_default_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUT TIEN TAI ATM VIB"
                        android:textColor="@color/black" />

                    <com.vnapnic.myvib.customs.FontTextView
                        android:id="@+id/money_history4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_0_4dp"
                        android:text="-50,000 VND"
                        android:textColor="@color/orange_text"
                        android:textSize="@dimen/text_2_12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/view_receipt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/spacing_0_4dp"
                    android:paddingRight="@dimen/spacing_0_4dp"
                    android:src="@drawable/icon_eye" />
            </RelativeLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/content_4"
                android:background="@color/bg_white_press" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/row_bar1"
                android:background="@drawable/dropshadow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/row_bar2"
                android:background="@drawable/dropshadow" />


            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/row_bar3"
                android:background="@drawable/dropshadow" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>